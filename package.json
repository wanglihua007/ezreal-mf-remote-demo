{
  "name": "ezreal-demo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@wanglihua/react-scripts": "^0.1.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "scripts": {
    "start": "cross-env PORT=50052 ezreal start",
    "build": "ezreal build",
    "release": "standard-version",
    "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
    "lint:js": "eslint \"*/**/*.{js,jsx,ts,tsx}\" --cache --format=pretty",
    "lint:style": "stylelint \"*/**/*.{css,less,scss}\"",
    "lint:prettier": "prettier --check \"*/**/*\" --end-of-line auto",
    "lint:fix": "yarn lint:js --fix && yarn lint:style --fix && yarn prettier",
    "prettier": "yarn lint:prettier --write",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*/**/*.{css,scss.less}": "yarn lint:style",
    "*/**/*.{js,jsx,ts,tsx}": "yarn lint:js",
    "*/**/*.{js,jsx,ts,tsx,css,less,scss}": "yarn lint:prettier"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-soraka": "^0.1.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-soraka": "^0.1.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "web-vitals": "^1.0.1"
  }
}
